<style>
    .status-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        font-family: 'Orbitron', monospace;
        background: #0a0a0a;
        color: #fff;
        min-height: 100vh;
    }

    .status-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }

    .status-card {
        background: #1a1a1a;
        border: 1px solid #333;
