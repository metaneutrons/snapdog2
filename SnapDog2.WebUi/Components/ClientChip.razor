@using SnapDog2.WebUi.ApiClient

<div class="client-chip @(isDragging ? "dragging" : "")"
     draggable="true"
     @ondragstart="HandleDragStart"
     @ondragend="HandleDragEnd">
    
    <div class="status-indicator @(Client.IsConnected ? "status-connected" : "status-disconnected")"></div>
    <span class="text-h3">@Client.Name</span>
    
    @if (Client.IsMuted)
    {
        <span style="margin-left: 0.5rem;">ðŸ”‡</span>
    }
</div>

@code {
    [Parameter] public ClientState Client { get; set; } = null!;
    [Parameter] public EventCallback<int> OnDragStart { get; set; }

    private bool isDragging = false;

    private async Task HandleDragStart(DragEventArgs e)
    {
        isDragging = true;
        await OnDragStart.InvokeAsync(Client.Index);
    }

    private void HandleDragEnd(DragEventArgs e)
    {
        isDragging = false;
    }
}
