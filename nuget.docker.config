<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <packageSources>
        <clear />
        <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
        <add key="github-snapcast-net" value="https://nuget.pkg.github.com/metaneutrons/index.json" />
        <add key="local-nuget" value="/root/.nuget/local" />
        <add key="Local-SnapcastClient-Container" value="/local-nuget" />
    </packageSources>
    <packageSourceCredentials>
        <github-snapcast-net>
            <add key="Username" value="metaneutrons" />
            <add key="ClearTextPassword" value="%GITHUB_TOKEN%" />
        </github-snapcast-net>
    </packageSourceCredentials>
    <packageSourceMapping>
        <!-- Map SnapCastNet to GitHub Packages -->
        <packageSource key="github-snapcast-net">
            <package pattern="SnapCastNet" />
        </packageSource>
        <!-- Map SnapcastClient to local repositories -->
        <packageSource key="local-nuget">
            <package pattern="SnapcastClient" />
        </packageSource>
        <packageSource key="Local-SnapcastClient-Container">
            <package pattern="SnapcastClient" />
        </packageSource>
        <!-- Map all other packages to nuget.org -->
        <packageSource key="nuget.org">
            <package pattern="*" />
        </packageSource>
    </packageSourceMapping>
</configuration>
