{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApiAuth": {
    "ApiKeys": [
      "dev-key-12345",
      "test-key-67890"
    ],
    "RequireHttps": false
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:8080",
      "https://localhost:5001"
    ],
    "AllowedMethods": [
      "GET",
      "POST",
      "PUT",
      "DELETE",
      "OPTIONS"
    ],
    "AllowedHeaders": [
      "Content-Type",
      "Authorization",
      "X-API-Key"
    ],
    "AllowCredentials": true
  },
  "SnapDog": {
    "System": {
      "Name": "SnapDog2 API",
      "Version": "1.0.0",
      "Environment": "Development"
    },
    "Services": {
      "Snapcast": {
        "Host": "localhost",
        "Port": 1705,
        "TimeoutSeconds": 30,
        "ReconnectIntervalSeconds": 5,
        "AutoReconnect": true
      },
      "Mqtt": {
        "BrokerHost": "localhost",
        "BrokerPort": 1883,
        "ClientId": "snapdog2-api",
        "Username": "",
        "Password": "",
        "Timeout": 5000
      },
      "Knx": {
        "GatewayHost": "localhost",
        "GatewayPort": 3671,
        "Timeout": 5000
      }
    },
    "Api": {
      "BaseUrl": "https://localhost:7001",
      "Timeout": 30000,
      "MaxRetries": 3
    },
    "Telemetry": {
      "ServiceName": "SnapDog2.Api",
      "ServiceVersion": "1.0.0",
      "EnableTracing": true,
      "EnableMetrics": true,
      "EnableLogging": true,
      "OtlpEndpoint": "http://localhost:4317"
    }
  },
  "RateLimiting": {
    "Enabled": true,
    "HttpStatusCode": 429,
    "QuotaExceededMessage": "API rate limit exceeded. Please try again later.",
    "EnableRateLimitHeaders": true,
    "StackBlockedRequests": false,
    "RateLimitCounterPrefix": "snapdog2_rl",
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "DefaultRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      },
      {
        "Endpoint": "*",
        "Period": "1d",
        "Limit": 10000
      }
    ],
    "EndpointRules": [
      {
        "Endpoint": "*/system/health",
        "Period": "1m",
        "Limit": 30
      },
      {
        "Endpoint": "*/audiostreams/*/start",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "*/audiostreams/*/stop",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "*/zones/*/volume",
        "Period": "1m",
        "Limit": 30
      }
    ],
    "IpWhitelist": [
      "127.0.0.1",
      "::1",
      "192.168.1.0/24"
    ],
    "ClientWhitelist": [
      "admin-client",
      "monitoring-client"
    ]
  },
  "RequestResponseLogging": {
    "Enabled": true,
    "LogRequestBody": true,
    "LogResponseBody": true,
    "LogHeaders": true,
    "MaxBodySize": 4096,
    "CorrelationIdHeader": "X-Correlation-ID",
    "ExcludedPaths": [
      "/swagger",
      "/health",
      "/metrics",
      "/favicon.ico"
    ]
  },
  "InputValidation": {
    "Enabled": true,
    "ValidateQueryParameters": true,
    "ValidateHeaders": true,
    "ValidateRequestBody": true,
    "MaxParameterLength": 1000,
    "MaxHeaderLength": 2000,
    "MaxBodySize": 1048576,
    "MaxStringLength": 10000,
    "ExcludedPaths": [
      "/swagger",
      "/health",
      "/metrics"
    ]
  }
}
